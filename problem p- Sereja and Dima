#include "bits/stdc++.h"
#include <algorithm>
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);cin.tie(NULL);
    long long sum1=0,sum2=0,i=0;
    int n,x;
    cin>>n;
    deque<int>q;
    for (int i = 0; i <n ; ++i) {
        cin>>x;
        q.push_back(x);
    }
    while (q.size()) {
        if (q[0]>=q[q.size()-1]){
            if (i%2==0)sum1+=q[0];
            else sum2+=q[0];
            q.pop_front();
        }
        else {
            if (i%2==0)sum1+=q[q.size()-1];
            else sum2+=q[q.size()-1];
            q.pop_back();
        }
        i++;

    }
    cout<<sum1<<" "<<sum2;
    return 0;
}
